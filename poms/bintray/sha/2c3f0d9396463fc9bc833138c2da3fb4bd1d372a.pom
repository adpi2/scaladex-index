<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>gearpump-shaded-parent</artifactId>
    <groupId>org.apache.gearpump</groupId>
    <version>1.1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>gearpump-shaded-akka-kryo_2.11</artifactId>
  <version>0.3.2</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>org.scala-lang:*</exclude>
                  <exclude>com.typesafe.akka:*</exclude>
                  <exclude>org.scala-lang:*</exclude>
                  <exclude>com.typesafe:*</exclude>
                  <exclude>io.netty:*</exclude>
                  <exclude>com.google.protobuf:*</exclude>
                  <exclude>org.uncommons.maths:*</exclude>
                  <exclude>net.jpountz.lz4:*</exclude>
                </excludes>
              </artifactSet>
              <transformers>
                <transformer />
                <transformer />
              </transformers>
              <relocations>
                <relocation>
                  <pattern>com.romix</pattern>
                  <shadedPattern>org.apache.gearpump.romix</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.esotericsoftware</pattern>
                  <shadedPattern>org.apache.gearpump.esotericsoftware</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.objenesis</pattern>
                  <shadedPattern>org.apache.gearpump.objenesis</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <distributionManagement>
    <repository>
      <id>bintray-fvunicorn-maven</id>
      <name>fvunicorn-maven</name>
      <url>https://api.bintray.com/maven/${bintray.repo}/gearpump-shaded-akka-kryo_${scala.version}/;publish=1</url>
    </repository>
  </distributionManagement>
</project>

